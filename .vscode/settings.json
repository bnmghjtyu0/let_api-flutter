{
  "dart.lineLength": 80, //程式碼最大長度 120
  // ui 引導線
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  // "dart.flutterHotReloadOnSave": "allIfDirty",
  // "dart.debugExternalPackageLibraries": false,
  // "dart.debugSdkLibraries": false,
  "[dart]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      //儲存自動加分號 ;
      "quickfix.insertSemicolon": true,
      "source.organizeImports": true
    },
    "editor.rulers": [80], //程式碼最大長度 120
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "dart.warnWhenEditingFilesOutsideWorkspace": false,
  "dart.renameFilesWithClasses": "prompt",
  "editor.bracketPairColorization.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.dart": "${capture}.g.dart, ${capture}.freezed.dart"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  // cSpell 白名單
  "cSpell.words": [
    "fenix",
    "datepicker",
    "fixnum",
    "bslmeiyu",
    "bsimeiyu",
    "kkbox",
    "fromRGBO",
    "riverpod",
    "riverpods",
    "vsync",
    "autocorrect",
    "toolbarOptions",
    "debouncer",
    "autovalidate",
    "autofocus",
    "mlhome",
    "mlheader",
    "mlgrey",
    "listview",
    "curr",
    "firestore",
    "Cupertino",
    "commitlint",
    "noto",
    "ysabeau"
  ],

  // fvm
  // -------------------------------
  "dart.flutterSdkPaths": ["/Users/$USER/fvm/versions/3.10.2"],
  "dart.flutterSdkPath": "/Users/$USER/fvm/versions/3.10.2",
  // Remove .fvm files from search
  "search.exclude": {
    "**/.fvm": true
  },
  // Remove from file watching
  "files.watcherExclude": {
    "**/.fvm": true
  }
  // -------------------------------
}
